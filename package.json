{
	"name": "enk",
	"version": "0.0.0",
	"description": "Ember for CLI",
	"type": "module",
	"license": "MIT",
	"repository": "NullVoxPopuli/ink",
	"exports": {
		".": "src/index.ts",
		"./register": "src/register.ts"
	},
	"bin": "./src/run.ts",
	"engines": {
		"node": ">=24"
	},
	"scripts": {
		"bin-run": "NODE_NO_WARNINGS=1 node ./src/run.ts",
		"enk": "pnpm bin-run",
		"test": "FORCE_COLOR=true ava",
		"example:counter": "pnpm enk ./examples/counter/index.ts",
		"benchmark": "NODE_NO_WARNINGS=1 node --loader ts-node/esm"
	},
	"files": [
		"build"
	],
	"keywords": [
		"ember",
		"cli",
		"stdout",
		"components",
		"command-line",
		"print",
		"render",
		"colors",
		"text"
	],
	"dependencies": {
		"@alcalzone/ansi-tokenize": "^0.2.1",
		"ansi-escapes": "^7.0.0",
		"ansi-styles": "^6.2.1",
		"auto-bind": "^5.0.1",
		"chalk": "^5.6.0",
		"cli-boxes": "^3.0.0",
		"cli-cursor": "^4.0.0",
		"cli-truncate": "^4.0.0",
		"code-excerpt": "^4.0.0",
		"content-tag": "^4.0.0",
		"es-toolkit": "^1.39.10",
		"indent-string": "^5.0.0",
		"is-in-ci": "^2.0.0",
		"patch-console": "^2.0.0",
		"signal-exit": "^3.0.7",
		"slice-ansi": "^7.1.0",
		"stack-utils": "^2.0.6",
		"string-width": "^7.2.0",
		"type-fest": "^4.27.0",
		"widest-line": "^5.0.0",
		"wrap-ansi": "^9.0.0",
		"ws": "^8.18.0",
		"yoga-layout": "~3.2.1"
	},
	"devDependencies": {
		"@babel/core": "^7.28.5",
		"@babel/plugin-transform-typescript": "^7.28.5",
		"@ember/library-tsconfig": "^1.1.3",
		"@faker-js/faker": "^9.8.0",
		"@glimmer/component": "^2.0.0",
		"@glint/ember-tsc": "^1.0.7",
		"@glint/template": "^1.7.2",
		"@glint/tsserver-plugin": "^2.0.7",
		"@sinonjs/fake-timers": "^14.0.0",
		"@types/ms": "^2.1.0",
		"@types/node": "^22.15.24",
		"@types/signal-exit": "^3.0.0",
		"@types/sinon": "^17.0.3",
		"@types/stack-utils": "^2.0.2",
		"@types/ws": "^8.18.1",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.1.1",
		"babel-plugin-ember-template-compilation": "^3.0.1",
		"boxen": "^8.0.1",
		"decorator-transforms": "^2.3.0",
		"delay": "^6.0.0",
		"ember-source": "^6.8.1",
		"ms": "^2.1.3",
		"node-pty": "^1.0.0",
		"p-queue": "^8.0.0",
		"prettier": "^3.3.3",
		"prettier-plugin-ember-template-tag": "^2.1.0",
		"sinon": "^20.0.0",
		"strip-ansi": "^7.1.0",
		"typescript": "^5.8.3",
		"xo": "^0.59.3"
	},
	"peerDependencies": {
		"ember-source": ">=6.8.0"
	},
	"ava": {
		"workerThreads": false,
		"files": [
			"test/**/*",
			"!test/helpers/**/*",
			"!test/fixtures/**/*"
		],
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	}
}
